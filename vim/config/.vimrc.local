function! KyoPythonEntry()
    if getfsize(GetFileName()) != -1
        return
    endif
    call setline(1, ['#!/usr/bin/env python3', '',
\'def main():', '    pass', '',
\'if __name__ == "__main__":', '    main()'])
    return setpos('.', [bufnr('%'), 4, 4])
endfunction

autocmd FileType python call KyoPythonEntry()

